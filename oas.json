{
    "openapi": "3.0.3",
    "info": {
        "title": "Basic Demo",
        "description": "The API for the Oligoden Basic demo service.",
        "termsOfService": "https://oligoden.com/terms/",
        "contact": {
            "name": "Oligoden",
            "url": "https://www.oligoden.com",
